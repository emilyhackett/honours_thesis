\section{Writing equations}

\begin{equation}
\ {CAPE} = { \int_{LFC}^{EL} {R_d(T_{pseudoadiabat} - T_{sounding})d\ln P}}
\label{equ:cape}
\end{equation}


\begin{equation}
\ \small CAPE = {1 \over 2}R_a \sum_{k=1}^{k=n-1}{[(T_{pa}(k + 1) - T_s(k + 1)) + (T_{pa}(k) - T_s(k))] . [ln {P(k) \over P(k + 1)}]}
\label{equ:11}
\end{equation}


